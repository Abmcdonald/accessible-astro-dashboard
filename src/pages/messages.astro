---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Button from '../components/Button.astro'
import EmpyState from '../components/EmpyState.astro';
---

<DefaultLayout title="Messages">
  <section>
    <h1>Messages</h1><br>
    <p class="size-20">Lorem ipsum dolor sit amet.</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <h2>Messages overview</h2>
      <EmpyState>
        You haven't added any messages yet. Start by adding some.
      </EmpyState>
      <Button>Add your first message</Button>
    </div>
  </section>
</DefaultLayout>
